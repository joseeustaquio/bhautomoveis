@model Usuario

@{
    ViewData["Title"] = "Alteração  do Usuario";
}
<h1>@ViewData["Title"]</h1>
<h2>Alteração de Novo Usuário</h2>

  <p>@ViewData["Mensagem"]</p>
<form  asp-controller="Home" asp-action="EditarUsuario" method="post">
  <div class="form-group">
    <label for="nome">nome</label>
    <input type="text" class="form-control" name="nome" id="uNome" placeholder="Digite o seu nome ">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="email" id="uEmail" placeholder="Digite aqui o seu email">
  </div>

  <div class="form-group">
    <label for="senha">Senha</label>
    <input type="password" class="form-control" name="senha" id="uSenha" placeholder="Digite sua senha ">
  </div> 

  <select name="tipo" id="uTipo">
      <option value="@Usuario.ADMIN">Administrador</option>
      <option value="@Usuario.PADRAO">Padrão</option>
  </select>

  
  
  <button type="submit" class="btn btn-primary btn-block">Concluir Alteração</button>
  <a class="btn btn-secondary btn-block" asp-controller="Usuarios" asp-action="EditarUsuario" role="button">Voltar</a>
</form>
